
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Content/jquery-3.3.1.js"></script>
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo">
                    <h1><a href="#">Online <span>Shopping Store</span></a></h1>
                    <p>My Shop</p>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nav-menus">
                    <ul class="nav nav-pills">
                        <li class="active"><a style="border-radius:initial;" href="@Url.Action("Index","Home")">Home</a></li>
                        <li><a style="border-radius:initial;" href="#">Location</a></li>
                        <li><a style="border-radius:initial;" href="#">About</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 alert alert-info" style="margin-top:10%;margin-bottom:5%;">
                <h4 class="text-center"><b>Forgot your Password?</b></h4>
                <form action="~/Home/SendPassword" method="post">
                    <div id="msg"></div>
                    <div class="form-group">
                        <div class="input-group">
                        
                            <p>Enter your email id below:</p>
                            <input type="text" name="pemail" placeholder="Enter email here.." />
                            <input type="submit" name="submit" value="Submit" />
                        </div>
                    </div>
                    

                </form>
             </div>
        </div>
    </div>
    
</body>
</html>
